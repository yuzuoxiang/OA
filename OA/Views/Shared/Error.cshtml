@{
    ViewBag.Title = "404";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Css{
    <style>
        body {
            background-color: #f3f3f4;
        }

        h1, h2, h3 {
            font-family: inherit;
            font-weight: 500;
            line-height: 1.1;
            color: inherit;
        }

        .middle-box {
            max-width: 400px;
            z-index: 100;
            margin: 0 auto;
        }

            .middle-box h1 {
                font-size: 170px;
            }

        .wrapper .middle-box {
            margin-top: 140px;
        }
    </style>
}
<div class="middle-box text-center animated fadeInDown">
    <h1>404</h1>
    <h3 class="font-bold">页面发送错误，请联系管理员！</h3>
    <div class="error-desc">
        <hr />
        <a href="/home/index" class="btn btn-primary">返回首页</a>
        <hr />
        <div>
            <label>错误信息：</label>
            <p>@ViewBag.msg</p>
        </div>
    </div>
</div>


